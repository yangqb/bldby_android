<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar" />

    <style name="MyTransparent" parent="Theme.AppCompat.Light.NoActionBar" >
        <item name="android:windowBackground">@color/transparent</item> <!-- 背景色透明度 -->
        <item name="android:windowNoTitle">true</item><!-- 无标题 -->
        <item name="android:windowIsTranslucent">true</item><!-- 半透明,设置为false无透明效果 -->
        <item name="android:backgroundDimEnabled">true</item><!-- 模糊 -->
        <item name="android:windowAnimationStyle">@android:style/Animation.Translucent</item> <!-- 窗口样式Dialog -->
    </style>
    <declare-styleable name="CornerView">
        <attr name="cornerRadius" />
        <attr name="isCornerTopLeftRadius" format="boolean" />
        <attr name="isCornerTopRightRadius" format="boolean" />
        <attr name="isCornerBottomLeftRadius" format="boolean" />
        <attr name="isCornerBottomRightRadius" format="boolean" />
    </declare-styleable>

    <declare-styleable name="CornerButton">
        <attr name="cornerRadius" />
        <attr name="isCornerButtonTopLeftRadius" format="boolean" />
        <attr name="isCornerButtonTopRightRadius" format="boolean" />
        <attr name="isCornerButtonBottomLeftRadius" format="boolean" />
        <attr name="isCornerButtonBottomRightRadius" format="boolean" />
    </declare-styleable>

    <declare-styleable name="CornerTextView">
        <attr name="cornerRadius" />
        <attr name="isTextTopLeftRadius" format="boolean" />
        <attr name="isTextTopRightRadius" format="boolean" />
        <attr name="isTextBottomLeftRadius" format="boolean" />
        <attr name="isTextBottomRightRadius" format="boolean" />
    </declare-styleable>
    <declare-styleable name="CornerLinearView">
        <attr name="cornerRadius" format="dimension|reference" />
        <attr name="isTopLeftRadius" format="boolean" />
        <attr name="isTopRightRadius" format="boolean" />
        <attr name="isBottomLeftRadius" format="boolean" />
        <attr name="isBottomRightRadius" format="boolean" />
    </declare-styleable>


    <style name="BottomDialog" parent="@android:style/Theme.Dialog">

        <!-- 背景透明 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <!-- 浮于Activity之上 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 边框 -->
        <item name="android:windowFrame">@null</item>
        <!-- Dialog以外的区域模糊效果 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 无标题 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 半透明 -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- Dialog进入及退出动画 -->
        <item name="android:windowAnimationStyle">@style/DialogAnimation</item>
    </style>
    <!-- ActionSheet进出动画 -->
    <style name="DialogAnimation" parent="@android:style/Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/anim_dialog_in</item>
        <item name="android:windowExitAnimation">@anim/anim_dialog_out</item>
    </style>
    <style name="TransparentDialog" parent="Theme.AppCompat.Dialog">
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:background">#00000000</item> <!-- 设置自定义布局的背景透明 -->

    </style>

</resources>