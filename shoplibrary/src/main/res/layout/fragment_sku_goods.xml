<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.bldby.shoplibrary.goods.GoodsSkuFragment" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/transparent_50">

        <com.bldby.baselibrary.core.view.CornerLinearView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_533"
            android:layout_gravity="bottom"
            android:background="@color/white"
            android:orientation="vertical"
            app:cornerRadius="@dimen/dp_10"
            app:isBottomLeftRadius="false"
            app:isBottomRightRadius="false">

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_133">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="@dimen/dp_30"
                    android:layout_marginTop="@dimen/dp_7"
                    android:layout_marginEnd="@dimen/dp_7"
                    android:onClick="@{viewModel::onBcak}"
                    android:scaleType="centerInside"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@mipmap/goods_close" />

                <ImageView
                    android:id="@+id/headersImg"
                    android:layout_width="@dimen/dp_90"
                    android:layout_height="@dimen/dp_90"
                    android:layout_marginStart="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_3"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/imageView"
                    tools:srcCompat="@tools:sample/avatars" />

                <TextView
                    android:id="@+id/selectedSKu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_10"
                    android:text="已选：白色 S"
                    android:textColor="@color/ff333333"
                    android:textSize="@dimen/sp_12"
                    app:layout_constraintBottom_toBottomOf="@+id/headersImg"
                    app:layout_constraintStart_toEndOf="@+id/headersImg" />

                <TextView
                    android:id="@+id/price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_10"
                    android:layout_marginBottom="@dimen/dp_2"
                    android:text="¥ 66.8"
                    android:textColor="@color/ffea362c"
                    android:textSize="@dimen/sp_18"
                    app:layout_constraintBottom_toTopOf="@+id/selectedSKu"
                    app:layout_constraintStart_toEndOf="@+id/headersImg" />

            </android.support.constraint.ConstraintLayout>

            <android.support.v4.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingTop="@dimen/dp_20">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <android.support.design.chip.ChipGroup
                        android:id="@+id/chip_group"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:theme="@style/Theme.MaterialComponents.Light"
                        app:chipSpacing="10dp"
                        app:singleSelection="true">

                        <android.support.design.chip.Chip
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checkable="true"
                            android:clickable="true"
                            android:text="Chip"
                            android:textAllCaps="false"
                            app:checkedIconEnabled="false"
                            app:chipCornerRadius="4dp"
                            app:rippleColor="@color/black" />

                        <android.support.design.chip.Chip
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checkable="true"
                            android:clickable="true"
                            android:text="水波纹颜色"
                            android:textAllCaps="false"
                            app:checkedIconEnabled="false"
                            app:chipCornerRadius="4dp"
                            app:rippleColor="@color/black" />

                        <android.support.design.chip.Chip
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checkable="true"
                            android:clickable="true"
                            android:text="图标"
                            android:textAllCaps="false"
                            app:checkedIconEnabled="false"
                            app:chipCornerRadius="4dp"
                            app:rippleColor="@color/black" />


                        <android.support.design.chip.Chip
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checkable="true"
                            android:clickable="true"
                            android:text="背景"
                            android:textAllCaps="false"
                            app:checkedIconEnabled="false"
                            app:chipCornerRadius="4dp"
                            app:chipBackgroundColor="@color/gray_dddddd"
                            app:rippleColor="@color/black" />

                        <android.support.design.chip.Chip
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checkable="true"
                            android:clickable="true"
                            android:text="边框"
                            android:textAllCaps="false"
                            app:checkedIconEnabled="false"
                            app:chipCornerRadius="4dp" />

                        <android.support.design.chip.Chip
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checkable="true"
                            android:clickable="true"
                            android:text="圆角角度"
                            android:textAllCaps="false"
                            app:checkedIconEnabled="false"
                            app:chipCornerRadius="4dp"
                            app:rippleColor="@color/black" />

                    </android.support.design.chip.ChipGroup>
                </LinearLayout>
            </android.support.v4.widget.NestedScrollView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_42"
                android:layout_marginBottom="@dimen/dp_33">

            </LinearLayout>
        </com.bldby.baselibrary.core.view.CornerLinearView>
    </LinearLayout>
</layout>