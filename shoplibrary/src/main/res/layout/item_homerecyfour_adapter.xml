<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.bldby.baselibrary.core.view.CornerLinearView
        android:layout_gravity="center"
        app:cornerRadius="4dp"
        android:orientation="vertical"
        android:layout_width="@dimen/dp_158"
        android:layout_height="@dimen/dp_234"
        android:background="@color/home_white"
        android:layout_marginRight="@dimen/dp_10"
        >
          <ImageView
              android:id="@+id/item_recyfour_img"
              android:layout_width="@dimen/dp_138"
              android:layout_height="@dimen/dp_138"
              android:layout_marginTop="@dimen/dp_12"
              android:layout_gravity="center_horizontal"
              />
           <TextView
               android:id="@+id/item_recyfour_text"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="山东大樱桃"
               android:textSize="@dimen/sp_14"
               android:textColor="@color/item_recyone_text"
               android:layout_marginLeft="@dimen/dp_10"
               android:layout_marginTop="@dimen/dp_6"
               />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/item_recyfour_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥6.6"
                android:textColor="@color/item_red"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_4"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/home_miaoshabackimg"
                android:text="@string/home_miaoshaprice"
                android:textSize="@dimen/sp_10"
                android:textColor="@color/item_red"
                android:gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp_2"
                android:layout_marginLeft="@dimen/dp_14"
                >
            </TextView>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/item_recyfour_oldprice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_14"
                android:text="原价 ￥66.6"
                />

            <TextView
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30"
                android:background="@mipmap/home_yuanimg"
                android:text="GO"
                android:layout_marginLeft="@dimen/dp_20"
                android:gravity="center"
                android:textColor="@color/home_white"
                />
        </LinearLayout>

    </com.bldby.baselibrary.core.view.CornerLinearView>


</LinearLayout>