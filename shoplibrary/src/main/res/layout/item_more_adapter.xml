<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
       android:orientation="vertical"
    >
        <LinearLayout
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:orientation="vertical"
            android:layout_width="@dimen/dp_100"
            android:layout_height="@dimen/dp_166">
               <com.makeramen.roundedimageview.RoundedImageView
                   android:id="@+id/item_moreimg"
                   android:layout_width="@dimen/dp_100"
                   android:layout_height="@dimen/dp_100"
                   app:riv_corner_radius="@dimen/dp_4"
                   android:scaleType="centerInside"
                   />
             <TextView
                 android:id="@+id/item_moretext"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text=""
                 android:textSize="@dimen/sp_14"
                 android:textColor="@color/item_recyone_text"
                 android:layout_marginTop="@dimen/dp_6"
                 android:maxLines="1"
                 android:ellipsize="end"
                 />
            <TextView
                android:id="@+id/item_moretexttwo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_10"
                android:textColor="@color/item_gary"
                android:text="早餐和晚餐"
                />

            <LinearLayout
                android:id="@+id/ll_rebate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/sp_10"
                >

                <TextView
                    android:layout_width="@dimen/dp_50"
                    android:layout_height="@dimen/dp_14"
                    android:background="@drawable/left_vip_r10"
                    android:paddingLeft="5dp"
                    android:paddingRight="@dimen/dp_3"
                    android:text="成为会员"
                    android:textColor="@color/left_black"
                    android:textSize="@dimen/sp_10" />

                <TextView
                    android:id="@+id/tv_rebate"
                    android:layout_width="@dimen/dp_50"
                    android:layout_height="@dimen/dp_14"
                    android:background="@drawable/right_vip_r10"
                    android:text="奖励10%"
                    android:textColor="@color/item_red"
                    android:textSize="@dimen/sp_10" />
        </LinearLayout>
        </LinearLayout>
</LinearLayout>