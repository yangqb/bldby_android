<?xml version="1.0" encoding="utf-8"?>
<com.bldby.baselibrary.core.view.CornerLinearView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    android:background="@color/home_white"
    app:cornerRadius="@dimen/dp_10"
    android:layout_marginBottom="10dp"
    android:layout_marginLeft="@dimen/dp_5"
    android:layout_marginRight="@dimen/dp_5"
    >

                    <com.makeramen.roundedimageview.RoundedImageView
                        android:id="@+id/item_recommedimg"
                        android:layout_width="@dimen/dp_168"
                        android:layout_height="@dimen/dp_168"
                        android:layout_gravity="center"
                        android:scaleType="centerInside"
                        >
                    </com.makeramen.roundedimageview.RoundedImageView>
                  <TextView
                      android:id="@+id/item_recommedtitle"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:textSize="@dimen/sp_14"
                      android:textColor="@color/item_recyone_text"
                      android:text=""
                      android:maxLines="2"
                      android:ellipsize="end"
                      android:layout_marginLeft="@dimen/dp_10"
                      android:layout_marginRight="@dimen/dp_10"
                      android:layout_marginTop="@dimen/dp_10"
                      >
                  </TextView>
                  <RelativeLayout
                      android:layout_marginTop="@dimen/dp_4"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_marginLeft="@dimen/dp_10"
                      android:layout_marginRight="@dimen/dp_10"
                      >
                      <TextView
                          android:id="@+id/item_recommedprice"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:text="￥8.6 市场参考价"
                          android:textSize="@dimen/sp_10"
                          android:textColor="@color/item_gary"
                          />
                      <TextView
                          android:id="@+id/item_recommedsales"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:text="销量：998"
                          android:layout_alignParentRight="true"
                          android:textColor="@color/item_gary"
                          android:textSize="@dimen/sp_10"
                          />
                  </RelativeLayout>
                  <LinearLayout
                      android:id="@+id/ll_rebate"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:gravity="center_vertical"
                      android:orientation="horizontal"
                      android:layout_marginTop="@dimen/dp_10"
                      android:layout_marginLeft="@dimen/dp_10"
                      >

                      <TextView
                          android:layout_width="@dimen/dp_60"
                          android:layout_height="@dimen/dp_18"
                          android:background="@drawable/left_vip_r10"
                          android:paddingLeft="5dp"
                          android:paddingRight="@dimen/dp_3"
                          android:text="成为会员"
                          android:gravity="center"
                          android:textColor="@color/left_black"
                          android:textSize="@dimen/sp_10" />

                      <TextView
                          android:id="@+id/tv_rebate"
                          android:layout_width="@dimen/dp_60"
                          android:layout_height="@dimen/dp_18"
                          android:background="@drawable/right_vip_r10"
                          android:text="奖励￥6起"
                          android:gravity="center"
                          android:textColor="@color/item_red"
                          android:textSize="@dimen/sp_10" />
                  </LinearLayout>
                  <TextView
                      android:id="@+id/item_price"
                      android:layout_marginTop="@dimen/dp_7"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:textSize="@dimen/sp_12"
                      android:textColor="@color/item_red"
                      android:text="￥68.8"
                      android:layout_marginLeft="@dimen/dp_10"
                      >

                  </TextView>

</com.bldby.baselibrary.core.view.CornerLinearView>