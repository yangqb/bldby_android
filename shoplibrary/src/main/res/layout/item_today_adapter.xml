<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    >
        <ImageView
            android:id="@+id/item_todayimg"
            android:layout_width="@dimen/dp_115"
            android:layout_height="@dimen/dp_115"
            android:scaleType="centerInside"
            />
      <LinearLayout
          android:layout_marginLeft="@dimen/dp_11"
          android:layout_width="match_parent"
          android:layout_marginRight="@dimen/dp_10"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          >
           <TextView
               android:id="@+id/item_todayname"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text=""
               android:maxLines="2"
               android:ellipsize="end"
               android:textSize="@dimen/sp_14"
               android:textColor="@color/item_recyone_text"
               />
          <RelativeLayout
              android:layout_marginTop="@dimen/dp_4"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              >
              <TextView
                  android:id="@+id/item_todayreferenceprice"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="￥8.6 市场参考价"
                  android:textSize="@dimen/sp_10"
                  android:textColor="@color/item_gary"
                  />
              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="销量：998"
                  android:layout_alignParentRight="true"
                  android:textColor="@color/item_gary"
                  android:textSize="@dimen/sp_10"
                  />
          </RelativeLayout>
          <LinearLayout
              android:id="@+id/ll_rebate"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:gravity="center_vertical"
              android:orientation="horizontal"
              android:layout_marginTop="@dimen/dp_10"
              >

              <TextView
                  android:layout_width="@dimen/dp_60"
                  android:layout_height="@dimen/dp_18"
                  android:background="@drawable/left_vip_r10"
                  android:paddingLeft="5dp"
                  android:paddingRight="@dimen/dp_3"
                  android:text="成为会员"
                  android:gravity="center"
                  android:textColor="@color/left_black"
                  android:textSize="@dimen/sp_10" />

              <TextView
                  android:id="@+id/tv_rebate"
                  android:layout_width="@dimen/dp_60"
                  android:layout_height="@dimen/dp_18"
                  android:background="@drawable/right_vip_r10"
                  android:text="奖励￥6起"
                  android:gravity="center"
                  android:textColor="@color/item_red"
                  android:textSize="@dimen/sp_10" />
          </LinearLayout>

          <TextView
              android:id="@+id/item_todayprice"
              android:layout_marginTop="@dimen/dp_5"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="￥66.8"
              android:textSize="@dimen/sp_16"
              android:textColor="@color/item_red"
              />
      </LinearLayout>

</LinearLayout>